<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="25dp">

    <ImageButton
        android:id="@+id/back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/back_icon_grey"
        android:background="@drawable/rounded_back_button_gray"
        app:backgroundTint="#ececec"
        />


    <TextView
        android:id="@+id/login_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="Reset your password"
        android:textAlignment="center"
        android:textSize="20sp"
        android:fontFamily="@font/avenirnextcyr_demi"/>

    <EditText
        android:id="@+id/emailforget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="you@email.com"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:paddingLeft="12dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="@drawable/edit_text_border"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonforget"
            android:text="Send Confirmation Code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:backgroundTint="@color/snapblue"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textSize="18sp"
            android:fontFamily="@font/avenirnextcyr_bold"/>

    </LinearLayout>

</LinearLayout>